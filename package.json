{
  "name": "autoapproval",
  "version": "1.0.0",
  "description": "The bot for approving pull requests automatically",
  "author": "Dmytro Khmelenko <d.khmelenko@gmail.com> (dkhmelenko.github.io)",
  "license": "ISC",
  "repository": "https://github.com//autoapproval.git",
  "homepage": "https://github.com//autoapproval",
  "bugs": "https://github.com//autoapproval/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "dependencies": {
    "@types/nock": "^9.3.0",
    "btoa": "^1.2.1",
    "nock": "^10.0.5",
    "probot": "^7.4.0",
    "probot-config": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.0",
    "nodemon": "^1.18.9",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "ts-jest": "^23.10.5",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^18.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "heroku-run-build-script": true
}
